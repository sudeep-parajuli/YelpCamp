<% layout("/layouts/boilerplate") %>

    <br>
    <h1>This is the list of Campgrounds</h1><br>

    <% for (let camp of allcamp) {%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=camp.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/allcampground/<%=camp._id%>">View
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <% } %>