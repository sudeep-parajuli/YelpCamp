<% layout("/layouts/boilerplate") %>

    <br>
    <div id="map" style="width: 100%; height: 500px">

    </div>
    <h1>This is the list of Campgrounds</h1><br>

    <% for (let camp of allcamp) {%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <%if(camp.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=camp.images[0].url%>">
                        <% }else {%>
                            <img class="img-fluid" alt=""
                                src="https://res.cloudinary.com/dbkbbjzl6/image/upload/v1656505751/YelpCamp/mkqabud20cqgau3vj9vw.jpg">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/allcampground/<%=camp._id%>">View
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <% } %>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const campgrounds = '<%- JSON.stringify(allcamp) %>';
            </script>
            <script src="/js/clustermap.js">
            </script>